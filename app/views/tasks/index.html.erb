<h1>liste des tasks</h1>

<% @tasks.each do |task| %>
<h2><%= task.name %></h2>

<%= link_to "show", task_path(task) %>
<%= link_to "edit", edit_task_path(task) %>
<%= link_to "new", new_task_path(task) %>
<%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>

<% end %>
